{
  "tasks": [
    {
      "name": "dotnet format",
      "command": "dotnet",
      "args": ["format", "--verify-no-changes", "--include", "${staged}"],
      "include": ["**/*.cs"]
    },
    {
      "name": "csharpier",
      "command": "dotnet",
      "args": ["csharpier", "${staged}"],
      "include": ["**/*.cs"]
    },
    {
      "name": "dotnet test",
      "command": "dotnet",
      "args": [
        "test",
        "--verbosity",
        "quiet",
        "--filter",
        "FullyQualifiedName~UnitTests"
      ]
    }
  ]
}
